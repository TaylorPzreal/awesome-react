{
  "name": "awesome-react",
  "version": "0.3.0",
  "description": "A basic web app from React, called awesome-react",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.dev.js --hot",
    "start-browser": "yarn run start --open",
    "build": "webpack --config config/webpack.prod.js --progress --profile",
    "build-analyse": "yarn run build --json > docs/stats.json",
    "dll": "webpack --config config/webpack.dll.js",
    "test": "jest --env=jsdom",
    "lint": "eslint --ext .jsx --ext .js src/",
    "format": "npm-run-all format-*",
    "format-jsx": "prettier src/**/*.js src/**/*.jsx --trailing-comma=es5 --write && yarn run lint --fix",
    "format-style": "prettier src/**/*.css src/**/*.scss --write",
    "format-md": "prettier README.md src/**/*.md docs/**/*.md --write",
    "server": "http-server ./dist/ -p 9000",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "doc": "esdoc",
    "server-doc": "http-server ./doc -p 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TaylorPzreal/awesome-react.git"
  },
  "keywords": [
    "react",
    "awesome-react",
    "react-app",
    "react-product"
  ],
  "author": "TaylorPzreal <taylorpzreal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TaylorPzreal/awesome-react/issues"
  },
  "homepage": "https://github.com/TaylorPzreal/awesome-react#readme",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loadable": "^5.3.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-devtools": "^3.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.8",
    "@commitlint/config-conventional": "^5.2.3",
    "autoprefix": "^1.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "esdoc": "^1.0.4",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-react-plugin": "^1.0.1",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.10.0",
    "husky": "^0.14.3",
    "interpolate-webpack-plugin": "^1.0.2",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.9.2",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|scss|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/",
      "<rootDir>/src/assets/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest/adapter.js"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "format-jsx",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "format-style",
      "git add"
    ],
    "*.md": [
      "format-md",
      "git add"
    ]
  }
}
